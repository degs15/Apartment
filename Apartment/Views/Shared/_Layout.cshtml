<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")

    
    @Styles.Render("~/Content/DataTables")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    @if (ViewBag.Title != "Log in")
    {
        <nav class="navbar navbar-inverse navbar-fixed-top col-sm-12">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#MyNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @*<a class="navbar-brand" href="#"><img src="~/Content/Images/bklyn-trnsprnt.png" /></a>*@
                    <i class="fa fa-building-o socialsSize padd-left-95"></i>
                    <i class="fa fa-building socialsSize"></i>
                    <i class="fa fa-building-o socialsSize"></i>
                </div>
                <div class="collapse navbar-collapse" id="MyNavbar">
                @using (Html.BeginForm("Logoff", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <ul class="nav navbar-nav navbar-right">
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">@Html.ActionLink("Home","Index","Home")</li>

                        @if(User.IsInRole("Admin"))
                        {
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "User" ? "active" : "")">@Html.ActionLink("Manage Users", "getAllUser", "User")</li>
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Tenant" ? "active" : "")">@Html.ActionLink("View Tenants", "Index", "Tenant")</li>
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Transaction" ? "active" : "")">@Html.ActionLink("Transactions", "Index", "Transaction")</li>
                        }

                        <li><a href="#" id="logoutLink">Log off</a></li>
  
                    </ul>
                   }
                </div>

            </div>


        </nav>
    }
    <div id="wrap">
        <div class="container body-content clear-top" id="main">
            @RenderBody()


        </div>
    </div>
    @if (ViewBag.Title != "Log in")
    {
        <footer class="footer col-xs-12">
            <div class="row">
                <div class="col-sm-4 paraContent">
                    <h3>Address</h3>
                    
                    <h5>15 Address Street State City</h5>
                    <h5>83335632</h5>
                </div>
                <div class="col-sm-4 paraContent">
                    <h3>Connect</h3>
                    <a href="#" class="fa fa-facebook socialicons socialsSize"></a>
                    <a href="#" class="fa fa-twitter socialicons socialsSize"></a>
                    <a href="#" class="fa fa-google socialicons socialsSize"></a>
                    <a href="#" class="fa fa-youtube socialicons socialsSize"></a>
                </div>
                <div class="col-sm-4 paraContent">
                    <h3>Contact Us</h3>
                    <h5>apartments@gmail.com</h5>
                    @*<img src="~/Content/Images/bklyn-trnsprnt.png" class="icon" id="footerlogo" />*@
                    <i class="fa fa-address-book socialsSize padd-left-65"></i>
                </div>
            </div>
        </footer>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/DataTables")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/Apartment")
    <!--<script type="text/javascript" src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>-->

   
    @RenderSection("scripts", required: false)
 
</body>
</html>
