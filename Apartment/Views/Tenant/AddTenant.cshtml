@model Apartment.Models.TenantViewModel

@using (Ajax.BeginForm("AddTenant",new AjaxOptions { OnSuccess = "onChangeSuccessAddTenant" }) )
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal modal-dialog">
        <div class="modal-contentAddedit" id="modalAddEditFormId">
            <div class="modal-header">
                <h4 class="labelTexts">Add a Tenant</h4>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group">
                    @Html.LabelFor(model => model.TenantName, htmlAttributes: new { @class = "control-label col-md-4 labelTexts" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.TenantName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenantName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TenantAddress, htmlAttributes: new { @class = "control-label col-md-4 labelTexts" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.TenantAddress, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenantAddress, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TenantPhoneNumber, htmlAttributes: new { @class = "control-label col-md-4 labelTexts" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.TenantPhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenantPhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <br />
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add Tenant" class="btn btn-default sample1"  />
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel" />
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
}
