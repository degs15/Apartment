@model Apartment.Models.TenantViewModel

@{
    ViewBag.Title = "Update Tenant Details";
}

<h2>Update Tenant Details</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TenantId)

        <div class="form-group">
            @Html.LabelFor(model => model.TenantName, htmlAttributes: new { @class = "control-label col-md-2 paraContent" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenantName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenantName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TenantAddress, htmlAttributes: new { @class = "control-label col-md-2 paraContent" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenantAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenantAddress, "", new { @class = "text-danger" })
            </div>
        </div>
      
        <div class="form-group">
            @Html.LabelFor(model => model.TenantPhoneNumber, htmlAttributes: new { @class = "control-label col-md-2 paraContent" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenantPhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenantPhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default specialbtn" />
                @Html.ActionLink("Cancel", "Index", new { controller = "Tenant" }, new { @class = "btn btn-default specialbtn" })

            </div>
        </div>
    </div>
}





